<head></head>
<body>
  
<header></header>
<main>
  <p id="notice"><%= notice %></p>

  <h1 class="text-center">Categories</h1>
  <br>
  <button type="button" class="btn btn-outline-info">
    <%= link_to 'New Category', new_admin_category_path %>
  </button>
  
  <div class="d-flex justify-content-center mb-2">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= link_to 'Show', admin_category_path(category), class: "btn btn-info" %></td>
            <td><%= link_to 'Edit', edit_admin_category_path(category), class: "btn btn-success" %></td>
            <td><%= link_to 'Delete', admin_category_path(category), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</main>
