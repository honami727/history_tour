<main>
  <p id="notice"><%= notice %></p>
  <div class="container mt-5">
    <h3>Categories</h3>
    <br>
    <button type="button" class="btn btn-outline-info">
      <%= link_to 'New Category', new_admin_category_path %>
    </button>
    <table class="table mt-3">
      <tr>
        <th class="col-2">Name</th>
        <th class="col-2"></th>
        <th class="col-2"></th>
      </tr>
      <tbody>
        <% @categories.each do |category| %>
        <tr>
          <td class="col-2"><%= category.name %></td>
          <td class="col-2"><%= link_to 'Edit', edit_admin_category_path(category), class: "btn btn-sm btn-success" %></td>
          <td class="col-2"><%= link_to 'Delete', admin_category_path(category), class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</main>
