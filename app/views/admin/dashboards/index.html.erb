<main>
    <p id="notice"></p>
    <div class="container mt-5">
      <h3>Users List</h3>
      <table class="table mt-3">
          <tr>
            <th class="col-2">User name</th>
            <th class="col-2">Email</th>
            <th class="col-2"></th>
          </tr>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="col-2"><%= user.name %></td>
              <td class="col-2"><%= user.email %></td>
              <td class="col-2"><%= link_to 'Delete', admin_user_path(user.id), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: 'Are you sureï¼Ÿ'} %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</main>