<main>
<p id="notice"></p>
<div class="container mt-5">
    <h3>Comments</h3>
    <table class="table mt-3">
        <tr>
            <th class="col-2">Name</th>
            <th class="col-2">Comment</th>
            <th class="col-2"></th>
            <th class="col-2"></th>
        </tr>
      <% @post_comments.each do |post_comment| %>
        <tr>
            <td class="col-2"><%= @users.find(post_comment.user_id).name %></td>
            <td class="col-2"><%= post_comment.comment %></td>
            <td class="col-2"><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
            <td class="col-2"><%= link_to 'Delete', admin_post_comment_path(post_comment), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>
</div>
</main>