<% if user_signed_in? %>
  <%= form_with url: spots_path, method: :get, local: true do |f| %>
    <%= f.text_field :word, value: params[:word] %>
    <%= f.select :method, options_for_select({"完全一致" => "perfect", "部分一致" => "partial"}, selected: params[:method]) %>
    <%= f.submit "検索", class: "btn-sm btn-primary" %>
  <% end %>
<% end %>