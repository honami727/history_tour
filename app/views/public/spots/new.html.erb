<head></head>
<body>
  
<header></header>
  
  <main>
    <p id="notice"></p>
    <div class="container">
      <div class="col-md-4 offset-md-4">
        <h2 class="text-center pt-5">新規投稿</h2>
        
        <% if @spot.errors.any? %>
          <%= @spot.errors.count %>件のエラーが発生しました
          <ul>
            <% @spot.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with model: @spot, url: '/spots', method: :post do |f| %>
        
       　　<div class="form_group pt-4 pb-3">
            <%= f.text_field :title, placeholder: "タイトル", class: "form-control" %>
          </div>

          <div class="form_group pt-4 pb-3">
            <%= f.text_field :person, placeholder: "所縁の人物", class: "form-control" %>
          </div>
          
          <div class="form_group pt-4 pb-3">
            <%= f.text_field :address, placeholder: "場所", class: "form-control" %>
          </div>
          
          <div class="form-group pt-4 pb-3">
            <%= f.collection_select :category_id, Category.all, :id, :name, { include_blank: "--時代カテゴリー--" }, { class: "form-control" } %>
          </div>
          
          <div class="form-group">
            <%= f.file_field :image, accept: "image/*" %>
          </div>
          
          <div class="form-group" >
            <%= f.text_area :body, placeholder: "説明", rows: 5, class: "form-control" %>
        　</div>

          <div class="text-center"> 
            <%= f.submit "投稿", class: 'btn btn-secondary' %>
          </div>
          
          <div class="test-left">
            <button type="button" class="btn btn-outline-secondary">
              <%= link_to "戻る", spots_path %>
            </button>
          </div>
  
        <% end %>
        
      </div>
    </div>
  </main> 
</body>