<h1>新規投稿</h1>

<% if @spot.errors.any? %>
  <%= @spot.errors.count %>件のエラーが発生しました
  <ul>
    <% @spot.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @spot, url: '/spots', method: :post do |f| %>

  <h4>人物</h4>
  <%= f.text_field :person %>
  
  <h4>場所</h4>
  <%= f.text_field :address %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>写真</h4>
  <%= f.file_field :image, accept: "image/*" %>

  <h4>説明</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
  
<% end %>