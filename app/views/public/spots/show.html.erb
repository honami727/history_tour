<head></head>
<body>
  
<header></header>
  
  <main>
    <p id="notice"></p>
  
    <div class="card-list-container py-5">
      <div class="card w-50 mx-auto mt-4 shadow-lg">
        <div class="card-body">
          <div class="row">
            <div class="col-2">
              <p><%= image_tag @spot.user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %></p>
            </div>
            <div class="col-10">
  
              <strong><%= @spot.user.name %></strong>

              <p>【<%= @spot.person %>】</p>

              <p>場所:<%= @spot.address %></p>
              
              <% if @spot.category.present? %>
　　　　        <%= link_to @spot.category.name,tagsearches_search_path(content:@spot.category) %>
　　          <% end %>

              <h3 class="mb-0"><%= @spot.title %></h3>
  
              <p><%= image_tag @spot.get_image, class: "img-fluid", size: "180x150" %></p>

              <p><%= @spot.body %></p>

              <p>投稿日:<%= @spot.created_at.strftime('%Y/%m/%d') %></p>

              <% if @spot.user == current_user %>
                <%= link_to "編集", edit_spot_path(@spot.id) %>
                <%= link_to "削除", spot_path(@spot.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
              <% end %>

              <% if @spot.favorited_by?(current_user) %>
                <p>
                  <%= link_to spot_favorite_path(@spot), method: :delete do %>
                    <i class="fa-solid fa-heart"></i>︎<%= @spot.favorites.count %>
                  <% end %>
                </p>
              <% else %>
                <p>
                  <%= link_to spot_favorite_path(@spot), method: :post do %>
                    <i class="fa-solid fa-heart"></i><%= @spot.favorites.count %>
                  <% end %>
                </p>
              <% end %>
            </div>

            <div>
              <p><i class="fa-regular fa-comment"></i>:<%= @spot.post_comments.count %></p>
              <% @spot.post_comments.each do |post_comment| %>
                <%= post_comment.user.name %>
                <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
                <% if post_comment.user == current_user %>
                  <%= link_to "削除", spot_post_comment_path(post_comment.spot, post_comment), method: :delete, "data-confirm" => "本当に削除しますか？" %>
                <% end %>
              <% end %>
              
            </div>
          </div>
        </div>
      </div>
      <div class="text-right">
        <%= form_with model: [@spot, @post_comment] do |f| %>
          <%= f.text_area :comment, rows: '3', placeholder: "comment" %>
          <%= f.submit "送信", class: 'btn btn-secondary' %>
        <% end %>
      </div>
    </div>
    
  </main>
</body>
