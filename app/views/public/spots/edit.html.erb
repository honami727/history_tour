<head></head>
<body>
  
<header></header>
  
  <main>
    <p id="notice"></p>
    <div class="container">
      <div class="col-md-4 offset-md-4">

      <h2 class="text-center pt-5">投稿編集</h2>

        <%= form_with model: @spot do |f| %>

  　       <div class="form_group pt-4 pb-3">
            <%= f.text_field :title, placeholder: "タイトル", class: "form-control" %>
          </div>

          <div class="form_group pt-4 pb-3">
            <%= f.text_field :person, placeholder: "所縁の人物", class: "form-control" %>
          </div>
          
          <div class="form_group pt-4 pb-3">
            <%= f.text_field :address, placeholder: "場所", class: "form-control" %>
          </div>
          
          <div class="form-group pt-4 pb-3">
            <%= f.collection_select :category_id, Category.all, :id, :name, { include_blank: "--時代カテゴリー--" }, { class: "form-control" } %>
          </div>
          
          <div class="form-group">
            <%= f.file_field :image, accept: "image/*" %>
          </div>
          
          <div class="form-group" >
            <%= f.text_area :body, placeholder: "説明", rows: 5, class: "form-control" %>
        　</div>

          <div class="text-center"> 
            <%= f.submit "Save", class: 'btn btn-secondary' %>
          </div>
          
          <div class="test-left">
            <button type="button" class="btn btn-outline-secondary">
              <%= link_to "Back", spot_path(@spot.id) %>
            </button>
          </div>
  
        <% end %>
       
      </div>
    </div>
  </main> 
</body>