<head></head>
<body>
  
<header></header>
  
  <main>
    <p id="notice"></p>
    <div class="container">
      <div class="col-md-4 offset-md-4">

      <h2 class="text-center pt-5">プロフィール編集</h2>
      
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
       <% end %>

      <%= form_with model: @user do |f| %>

        <%= f.file_field :profile_image %>

        <div class="form_group pt-4 pb-3">
          <%= f.text_field :name, placeholder: "ユーザーネーム", class: "form-control" %>
        </div>

        <div class="form-group" >
          <%= f.text_area :introduction, placeholder: "自己紹介", rows: 7, class: "form-control" %>
        </div>

        <div class="text-center"> 
          <%= f.submit "変更を保存", class: 'btn btn-secondary' %>
        </div>
        
        <div class="test-left">
          <button type="button" class="btn btn-outline-secondary">
            <%= link_to "戻る", user_path %>
          </button>
        </div>
  
      <% end %>
      </div>
    </div>
  </main>
</body>