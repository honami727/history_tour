<head></head>
<body>
  
<header></header>
  
  <main>
    <p id="notice"></p>
    <div class="container">
      <div class="col-md-4 offset-md-4">

      <h2 class="text-center pt-5">Edit Profile</h2>
      
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
       <% end %>

      <%= form_with model: @user do |f| %>

        <%= f.file_field :profile_image %>

        <div class="form_group pt-4 pb-3">
          <%= f.text_field :name, placeholder: "User Name", class: "form-control" %>
        </div>

        <div class="form-group" >
          <%= f.text_area :introduction, placeholder: "Introduction", rows: 7, class: "form-control" %>
        </div>

        <div class ="d-flex justify-content-between align-items-center">
　　      <div class="btn-group">
　　        <span>
              <%= f.submit "Save", class: 'btn btn-outline-primary' %>
              <button type="button" class="btn btn-outline-dark">
                <%= link_to "Back", user_path %>
              </button>
            </span>
　　      </div>
　　    </div>
　　  
  
      <% end %>
      </div>
    </div>
  </main>
</body>