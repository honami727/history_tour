<body>
    <main>
      <h1>プロフィール編集</h1>
      
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
       <% end %>

      <%= form_with model: @user do |f| %>

        <h4>プロフィール画像</h4>
        <%= f.file_field :profile_image %>

        <h4>ユーザー</h4>
        <%= f.text_field :name %>

